<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.michaeloles.swiftset.MainActivity"
    tools:showIn="@layout/activity_main">

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/allOptions">

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/horizontalScrollView"
                android:scrollIndicators="none">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/sortingPath"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:minHeight="5dp"
                    android:minWidth="10dp"
                    android:divider="@color/colorAccent"
                    android:dividerPadding="1dp">

                </LinearLayout>
            </HorizontalScrollView>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="View All Exercises"
                android:id="@+id/viewAll"
                android:layout_gravity="center_horizontal"
                android:onClick="viewExercises"
                android:background="@color/colorPrimaryDark"
                android:layout_marginTop="10dp" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="View Workouts"
                android:id="@+id/viewWorkouts"
                android:layout_gravity="center_horizontal"
                android:onClick="viewWorkouts"
                android:background="@color/colorPrimaryDark"
                android:layout_marginTop="10dp" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Reset"
                android:id="@+id/reset"
                android:background="@color/colorPrimaryDark"
                android:layout_marginTop="10dp"
                android:onClick="reset"
                android:layout_marginBottom="10dp" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
